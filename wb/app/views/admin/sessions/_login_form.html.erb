<%= form_with model: @user, url: path, method: 'post' do |f| %>
  <%= render partial: 'shared/forms/email', locals: { f: f } %>
  <br>
  <%= render partial: 'shared/forms/password', locals: { f: f } %>
  <br>
  <%= render partial: 'shared/forms/submit', locals: { f: f, value: submit_text } %>
<% end %>
